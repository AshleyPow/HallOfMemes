<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginSignUp.LogInFragment">

    <LinearLayout
        android:id="@+id/userinfo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:src="@drawable/userphoto" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Hall Of Memes"
            android:textColor="@color/colorWhiteText"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="320dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- TODO: Update blank fragment layout -->
            <EditText
                android:id="@+id/etLoginEmail"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:hint="Email"
                android:paddingLeft="8dp"
                android:inputType="textEmailAddress"
                android:textSize="20sp"
                android:background="@drawable/rounded_et"/>

            <EditText
                android:id="@+id/etLoginPassword"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/etLoginEmail"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:hint="Password"
                android:paddingLeft="8dp"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:background="@drawable/rounded_et"/>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="425dp"
        android:background="@drawable/round_btn"
        android:text="Log In"
        android:textColor="@color/colorWhiteText"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tvDontHaveAnAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@color/colorHintText"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Don't Have an Account? Create one now" />

    <TextView
        android:id="@+id/tvForgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/tvDontHaveAnAccount"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="Forgot your password?" />
</RelativeLayout>